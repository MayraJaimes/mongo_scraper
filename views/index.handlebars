<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
        <a class="navbar-brand" href="/"> Mongo Scraper </a>      
        <a class="navbar-text active" href="/"> HOME </a>
        <a class="navbar-text" id="saved-articles" href="/saved"> Saved Articles </a>
        <a href="/scrape"><button type="button" class="btn btn-default navbar-btn" id="scrape-articles">Scrape New Articles!</button></a>
  </div>
</nav>

<div class="jumbotron">
  <h1 class="header">Mongo Scraper</h1>
  <p>Science Daily Edition</p>
</div>

<div id="articles">
  {{#each articles}}
    <div class="thumbnail">
      <div class="caption">
        {{#if saved}}
            <p data-id="{{this._id}}" class="unsave-article"> Delete   
              <i class="fas fa-plus"></i> 
            </p>
        {{else}}
          <p data-id="{{this._id}}" class="save-article"> Save   
            <i class="fas fa-plus"></i> 
          </p>
        {{/if}}
        <a href='{{this.link}}'> <h3>{{this.title}}</h3> </a> 
        <p> {{this.summary}}</p>
      </div>
      <p data-id="{{this._id}}" class="modal-button"> Comments 
        <i class="fas fa-comments"></i>
      </p>
    </div>
  {{/each}}
</div>

<div id="comment-modal" class="modal">
  <div id="comments" class="modal-content">   
    <span class="close">&times;</span>
    <form class="form-comment">
          <h3 class="article-title"> </h3>
          <p class="title">Post a Comment: </p>
          <textarea placeholder="Your Name" class="text-area" required="" id="name" rows="1"></textarea>
          <hr class="hr-form">
          <textarea placeholder="New Comment" class="text-area" id="body" rows="2"></textarea>
          <hr class="hr-form">
          <button class="btn btn-primary submit-button" type="submit">Submit</button>
          <p class="title title-comments"> Comments </p>
          <div id="existingComments">
          </div>
    </form>
  </div>
</div>